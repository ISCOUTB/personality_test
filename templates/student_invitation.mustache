<div class="personality-invitation-block">
    <div class="personality-header text-center mb-3">
        {{{icon}}}
        <h6 class="mt-2 mb-1">{{#str}}test_title, block_personality_test{{/str}}</h6>
        <small class="text-muted">{{#str}}discover_your_personality, block_personality_test{{/str}}</small>
    </div>
    
    {{#showdescriptions}}
    <div class="personality-description mb-3">
        <div class="card border-info">
            <div class="card-body p-3">
                <h6 class="card-title">
                    <i class="fa fa-info-circle" style="color: #00bf91;"></i> 
                    {{#str}}what_is_mbti, block_personality_test{{/str}}
                </h6>
                <p class="card-text small mb-2">{{#str}}test_description, block_personality_test{{/str}}</p>
                <ul class="list-unstyled small mb-0">
                    <li><i class="fa fa-check" style="color: #00bf91;"></i> {{#str}}feature_72_questions, block_personality_test{{/str}}</li>
                    <li><i class="fa fa-check text-success"></i> {{#str}}feature_16_types, block_personality_test{{/str}}</li>
                    <li><i class="fa fa-check text-success"></i> {{#str}}feature_instant_results, block_personality_test{{/str}}</li>
                </ul>
            </div>
        </div>
    </div>
    {{/showdescriptions}}
    
    <div class="personality-actions text-center">
        <a href="{{url}}" class="btn btn-info btn-block">
            <i class="fa fa-rocket"></i> <span>{{#str}}start_test, block_personality_test{{/str}}</span>
        </a>
    </div>
</div>
